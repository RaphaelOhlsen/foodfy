{% extends "admin/layout.njk" %}

{% block content %}
  <div class="wrap-header recipe">
      <h1 class="recipe-title">Gerenciar Receitas</h1>
  </div>
  <div class="admin wrap-cards">
    {% for recipe in recipes %}
      <div class="card">
        <div class="wrap-image">
          <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
        </div>
        <div class="info">
          <header class="card-title">
            <h2>{{ recipe.title }}</h2>
          </header>
          <p class="author-card">por {{ recipe.chef_name }}</p>
          <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
        </div>
      
      </div> 
    {% endfor %}
  </div>
{% endblock content %}

