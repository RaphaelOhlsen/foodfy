<div class="item">
  <div>Imagem da Receita</div>
  <div>
    <input 
      type="text",
      name="image",
      value="{{ recipe.image }}"
    />
  </div>
</div>

<div class="item">
  <div>Título</div>
    <div>
      <input 
        type="text",
        name="title",
        value="{{ recipe.title }}"
      />
    </div>
  </div>
</div>

<div class="item">
  <div>Autor</div>
    <div>
      <input 
        type="text",
        name="author",
        value="{{ recipe.author }}"
      />
    </div>
  </div>
</div>

<div class="item">
  <div>Ingredientes</div>
  <div id="ingredients">
    {% for ingredient in recipe.ingredients %}
      <div class="ingredient">
        <input 
          type="text"
          name="ingredients[]",
          value="{{ ingredient }}"
        /> 
      </div>
    {% endfor %}
  </div>
  <a class="add-ingredient" href="">Adicionar novo ingrediente</a>
</div>

<div class="item">
  <div>Modo de Preparo</div>
  <div id="steps">
    {% for step in recipe.preparation %}
      <div class="step">
        <input 
          type="text"
          name="preparation[]",
          value="{{ step }}"
        /> 
      </div>
    {% endfor %}
  </div>
  <a class="add-step" href="">Adicionar novo passo</a>
</div>

<div class="item">
  <div>Informações Adicionais</div>
  <div>
    <textarea 
      name="information",
      value="{{ recipe.information }}"
    >
      {{ recipe.information }}
    </textarea>
  </div>
</div>