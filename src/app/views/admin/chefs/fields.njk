<div class="item">
  <div>Nome</div>
  <div>
    <input 
      type="text"
      name="name"
      value="{{chef.name}}"
    />
  </div>
</div>
<div class="item chefs">
  <div>Avatar</div>
  <div>
    <div id="photos-upload">
      <input 
        id="photos-input"
        type="file" 
        name="photos" 
        multiple
        accept="image/*"
        onchange="AvatarUpload.handleFileInput(event)"
      >
      <p>Enviar Avatar</p>
    </div>
    <div id="photos-preview">
      {% if chef.avatar %}
          <div class="photo" id={{ chef.file_id }}>
            <img src="{{chef.avatar}}">
            <i 
              class="material-icons"
              onclick="PhotosUpload.removeOldPhoto(event)"
            >
              close
            </i>
          </div>
        <input type="hidden" name="removed_files">
      {% endif %}
    </div>
  </div>
</div>