<div class="wrap-itens">
  <div class="item">
    <div>Nome</div>
    <div>
      <input 
        type="text"
        name="name"
        value="{{user.name}}"
        placeholder="Digite o nome completo"
      />
    </div>
  </div>
  <div class="item">
    <div>Email</div>
    <div class="input">
      <input 
        type="email"
        name="email"
        value="{{user.email}}"
        placeholder="Digite o email"
        onblur="Validate.apply(this, 'isEmail')"
      />
    </div>
  </div>
</div>
<div class="item-checkbox">
  <input 
    type="checkbox" 
    name="isAdmin" 
    {% if user.isAdmin %}
      checked
    {% endif %}
  >
  <div>Administrador</div>
</div>