<header class="header">
    <div class="brand">
      <a href="/">
        <img src="/assets/logo.png" alt="logomarca da Foodfy">
      </a>
    </div>
    <nav>
      <ul>
          <li><a href="/about">Sobre</a></li>
          <li><a href="/recipes">Receitas</a></li>
          <li><a href="/chefs">Chefs</a></li>
      </ul>
    </nav>
    {% block search %}
      <form class="search" action="/recipes" method="get">
        <input
          type="text"
          placeholder="Buscar uma receita"
          name="search"
          value={{ search }}
        >
        <button type="submit">Buscar</button>
      </form>
    {% endblock search %}
  </header>